<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background">


        <TextView
            android:id="@+id/titAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/standardBorderMargin"
            android:layout_marginLeft="@dimen/standardBorderMargin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/standardBorderMargin"
            android:layout_marginRight="@dimen/standardBorderMargin"
            android:padding="@dimen/standardPadding"
            android:text="@string/title_Ar"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/titolo"
            android:textStyle="bold"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/infoAr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titAr"
            android:layout_marginStart="@dimen/standardBorderMargin"
            android:layout_marginLeft="@dimen/standardBorderMargin"
            android:layout_marginTop="@dimen/topMargin"
            android:layout_marginEnd="@dimen/standardBorderMargin"
            android:layout_marginRight="@dimen/standardBorderMargin"
            android:padding="@dimen/standardPadding"
            android:text="@string/infoAr"
            android:textAlignment="center"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoAr"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/standardBorderMargin"
            android:layout_marginLeft="@dimen/standardBorderMargin"
            android:layout_marginTop="@dimen/topMargin"
            android:layout_marginEnd="@dimen/standardBorderMargin"
            android:layout_marginRight="@dimen/standardBorderMargin"
            android:background="@drawable/button_border"
            android:onClick="startAr"
            android:padding="@dimen/standardPadding"
            android:text="@string/buttonAR" />

        <TextView
            android:id="@+id/infoAr2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button"
            android:layout_marginStart="@dimen/standardBorderMargin"
            android:layout_marginLeft="@dimen/standardBorderMargin"
            android:layout_marginTop="@dimen/topMargin"
            android:layout_marginEnd="@dimen/standardBorderMargin"
            android:layout_marginRight="@dimen/standardBorderMargin"
            android:padding="@dimen/standardPadding"
            android:text="@string/infoAr2"
            android:textAlignment="center"

            android:textColor="@android:color/white" />

    </RelativeLayout>
</ScrollView>